#!/usr/bin/python

import sys
import json

def makeCmd(numProcs):
  numa = ("" if numProcs == 1 else "")
  return {'cmd': '/usr/bin/time -v {}./sort 100000000 {} 10 5'.format(numa, numProcs),
          'tag': 'sort-shootout',
          'config': 'go',
          'procs': numProcs,
          'cwd': 'shootout/go'}

maxp = 70
procs = [1,10,20,30,40,50,60,70]

if len(sys.argv) > 1:
  maxp = int(sys.argv[1])

if (maxp >= 10):
  procs = range(1, (maxp/10)+1)
  procs = [10*p for p in procs]
  procs = [1] + procs
else:
  procs = range(1, maxp+1)


for p in procs:
  print(json.dumps(makeCmd(p)))
